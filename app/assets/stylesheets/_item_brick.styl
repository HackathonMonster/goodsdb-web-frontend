.masonry-brick
  margin-bottom 20px

.brick-container
  header
    color #fef8e0

  border-radius 20px
  padding 0 40px 20px 40px
  background-color #92efef
  background-color rgba(146, 239, 293, 0.5)
  width 100%
  height 100%
  img
    background #eeeeee

  .tags
    margin-top 10px

.tag
  display inline-block
  border-radius 10px
  background rgba(255, 244, 204, 0.6)
  padding 5px
  margin-right 10px
  cursor pointer
