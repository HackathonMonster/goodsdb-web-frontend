.masonry-brick
  margin-bottom 20px

.brick-container
  header
    color #fdfdfd

  border-radius 20px
  padding 0 40px 20px 40px
  background-color rgba(0, 149, 135, 0.4)
  width 100%
  height 100%
  img
    background #eeeeee

  .buy
    color #009587 - #222
    background rgba(240, 240, 240, 0.7)
    border-radius 8px
    margin-botom 0
    &:hover
      text-decoration none

  .tags
    margin-top 10px
    max-width 200px

.tag
  display inline-block
  border-radius 10px
  background rgba(255, 255, 255, 0.6)
  padding 5px
  margin-right 10px
  margin-bottom 10px
  cursor pointer
