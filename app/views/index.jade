extends ./layout.jade

block content
  nav.navbar.navbar-default
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="main-navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="javascript:void(0)" ng-click="filter($event, '')") Trunk

      #main-navbar.collapse.navbar-collapse
        ul.nav.navbar-nav(need-signin="hide")
          li(ng-class="{active: $state.includes('dashboard.top')}")
            a(ui-sref="dashboard.top" ng-click="filter($event, '')") トップ

        form.navbar-form.navbar-left(role="search" ng-submit="filter($event)" need-signin="hide")
          div.form-group
            input.form-control(type="text" name="search" placeholder="Search" ng-model="query.tags" ng-focus="clear()" ng-blur="restore()")
          div.form-group.item-types
            select.form-control(ng-model="query.type" ng-change="filter($event,  '')")
              option(value="any") すべて
              option(value="lost") 落し物
              option(value="found") 拾い物

        ul.nav.navbar-nav.navbar-right(need-signin="hide")
          li
            a(href="javascript:void(0)" ng-click="logout()") ログアウト

  div.container(ui-view="")
